<div class="container">
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-text">
            <h1 class="hero-title">Welcome to CSE Motors!</h1>
        </div>
        
        <!-- Featured Vehicle -->
        <div class="featured-vehicle">
            <div class="vehicle-main">
                <img src="/images/delorean.jpg" alt="DMC Delorean with gullwing doors" class="vehicle-image">
                <div class="vehicle-features-overlay">
                    <span class="feature-badge">3 Cup holders</span>
                    <span class="feature-badge">Super doors</span>
                    <span class="feature-badge">Fuzzy dice</span>
                </div>
            </div>
            
            <div class="vehicle-details">
                <h2 class="vehicle-name">DMC Delorean</h2>
                <button class="own-today-btn">Own Today</button>
            </div>
        </div>
    </section>

    <!-- Upgrades and Reviews Section -->
    <section class="content-grid">
        <div class="upgrades-column">
            <h3 class="section-title">Delorean upgrades</h3>
            <div class="upgrades-grid">
                <div class="upgrade-item">
                    <div class="upgrade-image flux-capacitor">
                        <img src="/images/flux-cap.png" alt="Flux Capacitor">
                    </div>
                    <p class="upgrade-name">Flux Capacitor</p>
                </div>
                
                <div class="upgrade-item">
                    <div class="upgrade-image flame-decals">
                        <img src="/images/flame.jpg" alt="Flame Decals">
                    </div>
                    <p class="upgrade-name">Flame Decals</p>
                </div>
                
                <div class="upgrade-item">
                    <div class="upgrade-image bumper-stickers">
                        <img src="/images/bumper_sticker.jpg" alt="Bumper Stickers">
                    </div>
                    <p class="upgrade-name">Bumper Stickers</p>
                </div>
                
                <div class="upgrade-item">
                    <div class="upgrade-image hub-caps">
                        <img src="/images/hub-cap.jpg" alt="Hub Caps">
                    </div>
                    <p class="upgrade-name">Hub Caps</p>
                </div>
            </div>
        </div>

        <div class="reviews-column">
            <h3 class="section-title">DMC Delorean reviews</h3>
            <div class="reviews-list">
                <div class="review-item">
                    <div class="review-rating">(5)</div>
                    <p class="review-text">"It's almost like traveling in time."</p>
                </div>
                
                <div class="review-item">
                    <div class="review-rating">(5)</div>
                    <p class="review-text">"Coolest ride on the road"</p>
                </div>
                
                <div class="review-item">
                    <div class="review-rating">(5)</div>
                    <p class="review-text">"The feeling is unreal"</p>
                </div>
                
                <div class="review-item">
                    <div class="review-rating">(5)</div>
                    <p class="review-text">"80s vibe I love it"</p>
                </div>
            </div>
        </div>
    </section>
</div>